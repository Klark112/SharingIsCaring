<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.design.widget.AppBarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_alignParentEnd="true"></android.support.design.widget.AppBarLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pokemon Name"
            android:id="@+id/pokemonName"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editName"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/description"
            android:layout_below="@+id/editName"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDescription"
            android:layout_below="@+id/editName"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ability"
            android:id="@+id/ability"
            android:layout_below="@+id/editDescription"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editAbility"
            android:layout_below="@+id/editDescription"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Level"
            android:id="@+id/level"
            android:layout_below="@+id/editAbility"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editLevel"
            android:layout_below="@+id/editAbility"
            android:layout_alignStart="@+id/editName"
            android:inputType="number"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Health Points"
            android:id="@+id/healthPoints"
            android:layout_below="@+id/editLevel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editHealthPoints"
            android:layout_alignEnd="@+id/editName"
            android:layout_alignStart="@+id/editName"
            android:layout_below="@+id/editLevel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Attack"
            android:id="@+id/attack"
            android:layout_below="@+id/editHealthPoints"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editAttack"
            android:layout_below="@+id/editHealthPoints"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Defense"
            android:id="@+id/defense"
            android:layout_below="@+id/editAttack"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDefense"
            android:layout_below="@+id/editAttack"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Special Attack"
            android:id="@+id/specialAttack"
            android:layout_alignTop="@+id/editSpecialAttack"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSpecialAttack"
            android:layout_below="@+id/editDefense"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Special Defense"
            android:id="@+id/specialDefense"
            android:layout_below="@+id/editSpecialAttack"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSpecialDefense"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName"
            android:layout_alignTop="@+id/specialDefense" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speed"
            android:id="@+id/speed"
            android:layout_below="@+id/editSpecialDefense"
            android:layout_alignStart="@+id/specialAttack" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSpeed"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName"
            android:layout_alignTop="@+id/speed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Primary Type"
            android:id="@+id/primaryType"
            android:layout_below="@+id/editSpeed"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPrimaryType"
            android:layout_alignTop="@+id/primaryType"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Secondary Type"
            android:id="@+id/secondaryType"
            android:layout_below="@+id/editPrimaryType"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSecondaryType"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/secondaryType"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move1"
            android:id="@+id/move1"
            android:layout_below="@+id/editSecondaryType"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editMove1"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/move1"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move2"
            android:id="@+id/move2"
            android:layout_below="@+id/editMove1"
            android:layout_alignStart="@+id/move4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editMove2"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName"
            android:layout_alignTop="@+id/move2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move3"
            android:id="@+id/move3"
            android:layout_below="@+id/editMove2"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editMove3"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/move3"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move4"
            android:id="@+id/move4"
            android:layout_below="@+id/editMove3"
            android:layout_alignStart="@+id/specialAttack" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editMove4"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/move4"
            android:layout_alignStart="@+id/editName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nature"
            android:text="Nature"
            android:layout_below="@+id/editMove4"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editNature"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editName"
            android:layout_alignTop="@+id/nature" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pokemon Item"
            android:id="@+id/pokemonItem"
            android:layout_below="@+id/editNature"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPokemonItem"
            android:layout_alignEnd="@+id/editSpecialAttack"
            android:layout_alignTop="@+id/pokemonItem"
            android:layout_alignStart="@+id/editName" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="Show up"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/relativeLayout" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Adding"
            android:id="@+id/finishAdding"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/description"
            android:layout_below="@+id/editPokemonItem" />


    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#424242">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Pokemon Name>"
        android:textColor="@color/text"
        android:id="@+id/textNameOA"
        android:autoText="false"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_weight="0.03"
        android:textSize="34dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Owner: "
            android:id="@+id/textOwnerITB"
            android:textColor="@color/text"
            android:paddingLeft="35dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&lt;Owner Name>"
            android:id="@+id/buttonOwnerIITB"
            android:textColor="@color/text"
            android:background="@color/button" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Status: "
            android:id="@+id/textStatusITB"
            android:textColor="@color/text"
            android:paddingLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Borrowed"
            android:id="@+id/textStatusIITB"
            android:textColor="@color/text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Offer: $"
            android:id="@+id/textOfferITB"
            android:textColor="@color/text"
            android:paddingLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="<?.??>"
            android:id="@+id/textOfferAmountITB"
            android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="/hr"
            android:id="@+id/textOfferHrITB"
            android:textColor="@color/text" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/textDescriptionITB"
        android:paddingLeft="35dp"
        android:textColor="@color/text"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="311dp"
            android:layout_height="200dp"
            android:text="A pokemon description will populate this textview element.  It may be a longer passage, and take more than a single line.  This may also be replaced with a series of textview elements that represent the Pokemon&apos;s attributes to the user."
            android:id="@+id/textDescriptionIITB"
            android:textColor="@color/text"
            android:background="@color/background"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:padding="10dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="Return PokÃ©mon"
            android:id="@+id/buttonReturn"
            android:textColor="@color/text"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/button" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Trainer:"
        android:id="@+id/textView11"
        android:textSize="18dp"
        android:textColor="#EAEAEA"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trainer name"
        android:textColor="#EAEAEA"

        android:textSize="18dp"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Log out"
        android:id="@+id/button4"
        android:background="#121212"
        android:textColor="#EAEAEA"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:text="my pc"
        android:background="#121212"
        android:textColor="#EAEAEA"
        android:id="@+id/button5"

        android:layout_below="@+id/textView12"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:background="#121212"
        android:text="market place"
        android:textColor="#EAEAEA"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:text="trainer card"
        android:background="#121212"
        android:textColor="#EAEAEA"
        android:id="@+id/button7"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notifications"
        android:textColor="#EAEAEA"
        android:id="@+id/textView13"

        android:layout_marginTop="33dp"
        android:layout_below="@+id/button7"
        android:layout_toStartOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#EAEAEA"
        android:text="Large Text"
        android:id="@+id/textView14"
        android:background="#121212"
        android:layout_below="@+id/textView13"

        android:layout_alignStart="@+id/textView13"
        android:layout_alignEnd="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#EAEAEA"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="6dp"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:background="#121212"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#EAEAEA"
        android:id="@+id/textView16"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />
</RelativeLayout>